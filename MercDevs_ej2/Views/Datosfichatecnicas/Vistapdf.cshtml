@model MercDevs_ej2.Models.Datosfichatecnica

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Ficha Técnica</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #333;
        }

        .section {
            margin-bottom: 20px;
        }

            .section h2 {
                border-bottom: 2px solid #333;
                padding-bottom: 5px;
                color: #333;
            }

            .section p {
                font-size: 14px;
                line-height: 1.6;
            }

        .details {
            margin: 10px 0;
        }

            .details label {
                font-weight: bold;
            }

            .details p {
                margin: 5px 0;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>Ficha Técnica</h1>

        <div class="section">
            <h2>Información del Cliente</h2>
            <div class="details">
                <label>Nombre del Cliente:</label>
                <p>@Model.RecepcionEquipo?.IdClienteNavigation.Nombre</p>
            </div>
            <div class="details">
                <label>Teléfono:</label>
                <p>@Model.RecepcionEquipo?.IdClienteNavigation.Telefono</p>
            </div>
            <div class="details">
                <label>Email:</label>
                <p>@Model.RecepcionEquipo?.IdClienteNavigation.Correo</p>
            </div>
        </div>

        <div class="section">
            <h2>Detalles del Informe</h2>
            <div class="details">
                <label>Observaciones:</label>
                <p>@Model.PobservacionesRecomendaciones</p>
            </div>
            <div class="details">
                <label>Fecha de Inicio:</label>
                <p>@Model.FechaInicio?.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="details">
                <label>Fecha de Finalización:</label>
                <p>@Model.FechaFinalizacion?.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <div class="section">
            <h2>Instalaciones</h2>
            <div class="details">
                <label>Software Instalado:</label>
                <p>
                    @(Model.Soinstalado switch
                    {
                        0 => "Windows 10",
                        1 => "Windows 11",
                        2 => "Linux",
                        _ => "No especificado"
                    })
                </p>
            </div>
            <div class="details">
                <label>Suite Office Instalado:</label>
                <p>
                    @(Model.SuiteOfficeInstalada switch
                    {
                        0 => "Microsoft Office 2013",
                        1 => "Microsoft Office 2019",
                        2 => "Microsoft Office 365",
                        3 => "OpenOffice",
                        _ => "No especificado"
                    })
                </p>
            </div>
            <div class="details">
                <label>Lector PDF Instalado:</label>
                <p>
                    @(Model.LectorPdfinstalado switch
                    {
                        0 => "No Instalado",
                        1 => "Instalado",
                        2 => "No Aplica",
                        _ => "No especificado"
                    })
                </p>
            </div>
            <div class="details">
                <label>Navegador Web Instalado:</label>
                <p>
                    @(Model.NavegadorWebInstalado switch
                    {
                        0 => "No Instalado",
                        1 => "Chrome",
                        2 => "Chrome y Firefox",
                        _ => "No especificado"
                    })
                </p>
            </div>
            <div class="details">
                <label>Antivirus Instalado:</label>
                <p>
                    @(Model.AntivirusInstalado switch
                    {
                        "0" => "No Instalado",
                        "1" => "Avast",
                        "2" => "McAfee",
                        _ => "No especificado"
                    })
                </p>
            </div>
        </div>

        <div class="section">
            <h2>Diagnósticos y Soluciones</h2>
            <ul>
                @if (Model.Diagnosticosolucions == null || !Model.Diagnosticosolucions.Any())
                {
                    <li>No hay diagnósticos ni soluciones disponibles</li>
                }
                else
                {
                    @foreach (var diagnostico in Model.Diagnosticosolucions)
                    {
                        <li>@diagnostico.DescripcionDiagnostico - @diagnostico.DescripcionSolucion</li>
                    }
                }
            </ul>
        </div>
    </div>
</body>
</html>
