@model MercDevs_ej2.Models.Descripcionservicio

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Descripcion Servicio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDescServ" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicioIdServicio" class="control-label">Servicio</label>
                <select asp-for="ServicioIdServicio" class="form-control" asp-items="ViewBag.ServicioIdServicio" ></select>
                <span asp-validation-for="ServicioIdServicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-secondary">Volver atras</button></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
